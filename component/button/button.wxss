mds-button{
  display: inline-block;
}

.mds-button {
  display: inline-block;
  line-height: 1;
  white-space: nowrap;
  cursor: pointer;
  background: #fff;
  border: 1rpx solid #d8dce5;
  border-color: #d8dce5;
  color: #5a5e66;
  -webkit-appearance: none;
  text-align: center;
  box-sizing: border-box;
  outline: none;
  margin: 0;
  transition: .1s;
  font-weight: 500;
  -moz-user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
  padding: 12rpx 20rpx;
  font-size: 28rpx;
  border-radius: 6rpx;
}

.mds-button+.mds-button {
  margin-left: 10px;
}

.mds-button.is-round {
  border-radius: 20rpx;
  padding: 12rpx 23rpx;
}


/* 
按钮尺寸 size-> medium / small / mini
*/


/* 大 */

.mds-button--large {
  width: 690rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
}


/* 中等 */

